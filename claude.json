{
  "editorMode": "vim",
  "verbose": false,
  "autoCompactEnabled": true,
  "todoFeatureEnabled": true,
  "mcpServers": {
    "MCP_DOCKER": {
      "command": "docker",
      "type": "stdio",
      "args": [
        "mcp",
        "gateway",
        "run"
      ]
    },
    "semgrep": {
      "type": "http",
      "url": "https://mcp.semgrep.ai/mcp"
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--enable-web-dashboard",
        "false",
        "--enable-gui-log-window",
        "false"
      ]
    },
    "cogitare": {
      "command": "docker",
      "type": "stdio",
      "args": [
        "run",
        "--rm",
        "-i",
        "--init",
        "--security-opt",
        "no-new-privileges",
        "--cpus",
        "1",
        "--memory",
        "2Gb",
        "--pull",
        "always",
        "ghcr.io/anntnzrb/cogitare:latest"
      ]
    }
  }
}
