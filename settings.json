{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_IN_CC": "true"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(chmod:*)",
      "Bash(cp:*)",
      "Bash(diff:*)",
      "Bash(docker-compose:*)",
      "Bash(dotnet build:*)",
      "Bash(dotnet clean:*)",
      "Bash(echo:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(gh pr:diff)",
      "Bash(gh pr:view)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git stash:*)",
      "Bash(git switch:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(pwd:*)",
      "Bash(rg:*)",
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(tail:*)",
      "Bash(time:*)",
      "Bash(timeout:*)",
      "Bash(uvx ruff:*)",
      "Bash(wc:*)",
      "WebFetch",
      "mcp__MCP_DOCKER",
      "mcp__sequentialthinking",
      "mcp__deepwiki",
      "mcp__archon"
    ],
    "defaultMode": "bypassPermissions"
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/bin/lib/statusline.ts"
  },
  "learnMode": false,
  "model": "sonnet"
}