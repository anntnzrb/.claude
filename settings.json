{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_IN_CC": "true",
    "DEV": "1",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_DOCTOR_COMMAND": "1",
    "DISABLE_INSTALL_GITHUB_APP_COMMAND": "1",
    "DISABLE_LOGIN_COMMAND": "1",
    "DISABLE_LOGOUT_COMMAND": "1",
    "DISABLE_MIGRATE_INSTALLER_COMMAND": "1",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_UPGRADE_COMMAND": "1",
    "USE_BUILTIN_RIPGREP": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(chmod:*)",
      "Bash(cp:*)",
      "Bash(diff:*)",
      "Bash(docker-compose:*)",
      "Bash(dotnet build:*)",
      "Bash(dotnet clean:*)",
      "Bash(echo:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(gh pr:diff)",
      "Bash(gh pr:view)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git stash:*)",
      "Bash(git switch:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(pwd:*)",
      "Bash(rg:*)",
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(tail:*)",
      "Bash(time:*)",
      "Bash(timeout:*)",
      "Bash(uvx ruff:*)",
      "Bash(wc:*)",
      "WebFetch",
      "mcp__MCP_DOCKER",
      "mcp__sequentialthinking",
      "mcp__deepwiki",
      "mcp__archon"
    ],
    "defaultMode": "bypassPermissions"
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/bin/lib/statusline.ts"
  },
  "alwaysThinkingEnabled": true,
  "learnMode": false
}
